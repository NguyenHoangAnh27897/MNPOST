@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">

    <title>MN POST</title>

    <!-- Bootstrap core CSS -->
    <link href="/Content/css/bootstrap.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="/Content/css/style.css" rel="stylesheet">
    <link href="/Content/css/style-responsive.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <a href="~/Views/Shared/_LayoutAccount.cshtml">~/Views/Shared/_LayoutAccount.cshtml</a>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    <style>
        input:valid {
            border-style: solid;
            border-color: #81ffa2;
        }
        
    </style>

</head>

<body>

    <section id="container">
        <!-- **********************************************************************************************************************************************************
        TOP BAR CONTENT & NOTIFICATIONS
        *********************************************************************************************************************************************************** -->
        <!--header start-->
        <header class="header black-bg">
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
            </div>
            <!--logo start-->
            <a href="/home/index" class="logo"><b>MN POST</b></a>
            <!--logo end-->
            <div class="top-menu">
                <ul class="nav pull-right top-menu">
                    <li><a class="logout" href="/account/logoff">Logout</a></li>
                </ul>
            </div>
        </header>
        <!--header end-->
        <!-- **********************************************************************************************************************************************************
        MAIN SIDEBAR MENU
        *********************************************************************************************************************************************************** -->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">

                    <p class="centered"><a href="/manage/index"><img src="/Content/img/user.jpg" class="img-circle" width="60"></a></p>
                    <h5 class="centered">@Session["Username"]</h5>

                    <li class="mt">
                        <a href="/manage/index">
                            <i class="fa fa-dashboard"></i>
                            <span>Thông tin tài khoản</span>
                        </a>
                    </li>
                    @if (Session["RoleID"].ToString().Equals("Admin"))
                    {
                        <li class="sub-menu">
                            <a href="javascript:;">
                                <i class="fa fa-cogs"></i>
                                <span>Quản lý bài viết</span>
                            </a>
                            <ul class="sub">
                                <li><a href="/post/create">Đăng bài mới</a></li>
                                <li><a href="/post/accountpost">Danh sách bài đăng</a></li>
                                <li><a href="/post/recruitment">Đăng tin tuyển dụng</a></li>
                                <li><a href="/manage/editaboutus">Quản lí giới thiệu</a></li>
                                <li><a href="/manage/manageservice">Quản lí dịch vụ</a></li>
                            </ul>
                        </li>
                        @*<li class="sub-menu">
                                <a href="javascript:;">
                                    <i class="fa fa-desktop"></i>
                                    <span>Quản lí dịch vụ</span>
                                </a>
                                <ul class="sub">
                                    <li><a href="/manage/manageservice">Loại dịch vụ</a></li>
                                </ul>
                            </li>*@
                    }
                    @if (Session["RoleID"].ToString().Equals("Customer"))
                    {
                        <li class="sub-menu">
                            <a href="javascript:;">
                                <i class="fa fa-envelope"></i>
                                <span>Quản lý đơn hàng</span>
                            </a>
                            <ul class="sub">
                                <li><a href="/order/create">Tạo đơn hàng</a></li>
                                <li><a href="/order/list">Danh sách đơn hàng</a></li>
                            </ul>
                        </li>
                        <li class="sub-menu">
                            <a href="javascript:;">
                                <i class="fa fa-book"></i>
                                <span>Phiên chuyển tiền</span>
                            </a>
                            <ul class="sub">
                                <li><a href="/sessionpayment/index">Tra phiên</a></li>
                                <li><a href="/sessionpayment/transaction">Xem tiền thu hộ</a></li>
                            </ul>
                        </li>
                        @*<li class="sub-menu">
                            <a href="javascript:;">
                                <i class="fa fa-book"></i>
                                <span>Xem bảng giá cước</span>
                            </a>
                            <ul class="sub">
                                <li><a href="/post/pricepage">Dịch vụ chuyển phát</a></li>
                            </ul>
                        </li>*@
                    }
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        @RenderBody()
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/Content/js/jquery.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/Content/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/Content/js/jquery.scrollTo.min.js"></script>
    <script src="/Content/js/jquery.nicescroll.js" type="text/javascript"></script>

    <!--common script for all pages-->
    <script src="/Content/js/common-scripts.js"></script>

    <!--script for this page-->

    <script>
        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

    </script>
    
</body>
</html>

