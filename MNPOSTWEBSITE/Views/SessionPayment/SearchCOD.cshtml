@using PagedList.Mvc;
@using GridMvc.Html;
@model PagedList.IPagedList<MNPOSTWEBSITE.Models.CODEntity>
@{
    ViewBag.Title = "SearchCOD";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Danh sách phiên chuyển tiền</h3>
        <div class="row">

            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <table class="table table-bordered table-striped table-condensed">
                            <h4><i class="fa fa-angle-right"></i> Phiên chuyển tiền</h4>
                            <hr />
                            <form method="get" action="/order/GetMailer">
                                <button class="btn btn-success" style="margin-right: 10px;margin-top: 19px;">Tra</button>
                                <div class='col-sm-3'>
                                    <div class="form-group">
                                        Từ ngày
                                        <div class='input-group date' id='dtpfromdate'>
                                            <input type='date' class="form-control" id="fdate" name="FromDate" />
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    Đến ngày
                                    <div class='input-group date' id='dtptodate'>
                                        <input type='date' class="form-control" name="ToDate" id="tdate" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </form>
                            <hr />
                            <thead>
                                <tr>
                                    <th><i class="fa fa-code"></i> Mã phiên</th>
                                    <th><i class="fa fa-code"></i> Mã bưu cục</th>
                                    <th><i class="fa fa-calendar"></i> Ngày tạo tài liệu</th>
                                    <th><i class="fa fa-code"></i> Số phiếu</th>
                                    <th><i class="fa fa-money"></i> Tổng cộng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (Model.Count() > 0)
                                    {
                                        <tr>
                                            <td><a href="/sessionpayment/detail/@item.DocumentID">@item.DocumentID</a></td>
                                            <td>@item.PostOfficeID</td>
                                            <td>@item.DocumentDate</td>
                                            <td>@item.PaymentID</td>
                                            <td>@string.Format("{0:n0}", item.Total)</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <br />
                                        <tr>
                                            Không có đơn hàng nào
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div><!-- /content-panel -->
                    <br />
                    <strong style="margin: 12px;"> Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</strong>
                    @Html.PagedListPager(Model, page => Url.Action("SearchCOD", new { page }))
                </div><!-- /col-md-12 -->
            </div><!-- /row -->
        </div>
    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->
