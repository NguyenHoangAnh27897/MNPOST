@using MNPOSTWEBSITEMODEL
@model IEnumerable<MNPOSTWEBSITEMODEL.AspNetUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<!-- **********************************************************************************************************************************************************
     MAIN CONTENT
     *********************************************************************************************************************************************************** -->
 <!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="row mt">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <! -- BASIC PROGRESS BARS -->
                <div class="showback form-horizontal style-form">
                    <h4><i class="fa fa-angle-right"></i> Thông tin tài khoản</h4>
                    <div class="form-group">
                        <label class="col-sm-3 col-sm-3 control-label">Họ và tên:</label>
                        <label class="col-sm-9 col-sm-9 control-label">@Model.FirstOrDefault().FullName</label>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-sm-3 control-label">Số điện thoại:</label>
                        <label class="col-sm-9 col-sm-9 control-label">@Model.FirstOrDefault().Phone</label>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-sm-3 control-label">Email:</label>
                        <label class="col-sm-9 col-sm-9 control-label">@Model.FirstOrDefault().UserName</label>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-sm-3 control-label">Trạng thái:</label>
                        <label class="col-sm-9 col-sm-9 control-label">Đã kích hoạt</label>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-sm-3 control-label">Customer ID:</label>
                        <label class="col-sm-9 col-sm-9 control-label">@ViewBag.CusInfo</label>
                    </div>
                    <a class="btn btn-default" href="/manage/editaccount/@Model.FirstOrDefault().IDClient">Chỉnh sửa thông tin</a>
                </div><!--/showback -->
              
            </div><!-- /col-lg-6 -->

        </div><!--/ row -->
    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->

<script src="/Content/js/jquery-ui-1.9.2.custom.min.js"></script>
<script src="/Content/js/jquery.ui.touch-punch.min.js"></script>