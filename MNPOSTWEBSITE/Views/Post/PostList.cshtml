@using PagedList.Mvc;
@using GridMvc.Html;
@model PagedList.IPagedList<MNPOSTWEBSITEMODEL.WS_Post>
@{
    ViewBag.Title = "PostList";
}

<!-- Blog List -->
<section class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                @for (int j = 1; j <= Model.Count; j++)
                {
                    <div class="row">
                        @for (int i = 0; i < 3; i++)
                        {
                            if (Model.FirstOrDefault(s => s.ID == j) != null)
                            {
                                <div class="col-lg-4 col-md-4">
                                    <div class="card blog-card">
                                        <a href="/post/detailpost/@Model.FirstOrDefault(s=>s.ID == j).ID">
                                            <img class="card-img-top" src="/images/post/@Model.FirstOrDefault(s=>s.ID == j).Images" alt="@Model.FirstOrDefault(s=>s.ID == j).Images">
                                            <div class="card-body">
                                                <span class="badge badge-success">@Model.FirstOrDefault(s => s.ID == j).Service</span>
                                                <h6>@Model.FirstOrDefault(s => s.ID == j).PostName</h6>
                                                <p class="mb-0">@Html.Raw(@Model.FirstOrDefault(s => s.ID == j).PostContent)</p>
                                            </div>
                                            <div class="card-footer">
                                                <p class="mb-0">đăng bởi <strong>@Model.FirstOrDefault(s => s.ID == j).PostBy</strong> @Model.FirstOrDefault(s => s.ID == j).CreatedDate</p>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                j++;
                            }
                        }
                    </div>
                }
                <br />
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("ViewReport", new { page}))
            </div>
        </div>
    </div>
</section>
<!-- End Blog List -->
