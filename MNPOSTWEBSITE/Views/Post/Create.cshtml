                                        <div class="col-sm-10">
                                            <input type="text" class="form-control round-form" name="Title" placeholder="Nhập tiêu đề...">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">Người đăng bài</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control round-form" name="PostBy" placeholder="Người đăng bài...">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">Loại dịch vụ</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control round-form" name="Service" placeholder="Nhập loại dịch vụ...">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">Nội dung bài viết</label>
                                        <div class="col-sm-10">
                                            <textarea name="Postcontent" id="Postcontent"></textarea>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-round btn-primary">Lưu bài viết</button>
                                </form>


                                <form class="form-horizontal style-form" method="post" action="/post/create" id="form1" style="display:none">
