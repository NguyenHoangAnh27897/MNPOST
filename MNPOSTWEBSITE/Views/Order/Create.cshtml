
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

  <!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Tạo đơn hàng</h3>

        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <form class="form-horizontal style-form" method="post" action="/post/create">
                        <div class="row">
                            <div class="col-lg-5">
                                <h4 class="mb"><i class="fa fa-angle-right"></i> Người gửi</h4>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Họ và tên</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control round-form" name="SenderName" placeholder="Nhập họ và tên...">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Số điện thoại</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control round-form" name="SenderPhone" placeholder="Người số điện thoại...">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Địa chỉ</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control round-form" name="SenderAddress" placeholder="Nhập địa chỉ...">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-round btn-success">Gói hàng</button>
                            </div>
                            <div class="col-lg-5">
                                <h4 class="mb"><i class="fa fa-angle-right"></i> Người nhận</h4>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Họ và tên</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control round-form" name="ReceiverName" placeholder="Nhập họ và tên...">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Số điện thoại</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control round-form" name="ReceiverPhone" placeholder="Người số điện thoại...">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Địa chỉ</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control round-form" name="ReceiverAddress" placeholder="Nhập địa chỉ...">
                                    </div>
                                </div>
                            </div>  
                        </div>
                    </form>
                </div>
            </div><!-- col-lg-12-->
        </div><!-- /row -->
    </section>
</section><!-- /MAIN CONTENT -->
<!--main content end-->

