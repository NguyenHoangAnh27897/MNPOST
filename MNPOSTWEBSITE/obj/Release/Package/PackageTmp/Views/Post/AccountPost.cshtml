@using PagedList.Mvc;
@using GridMvc.Html;
@model PagedList.IPagedList<MNPOSTWEBSITEMODEL.WS_Post> 
@{
    ViewBag.Title = "AccountPost";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Danh sách bài viết</h3>
        <div class="row">

        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-bordered table-striped table-condensed">
                        <h4><i class="fa fa-angle-right"></i> Bài viết</h4>
                        <hr>
                        <thead>
                            <tr>
                                <th><i class="fa fa-file"></i> Tiêu đề</th>
                                <th><i class="fa fa-user"></i> Người đăng</th>
                                <th><i class="fa fa-dropbox"></i> Dịch vụ</th>
                                <th><i class="fa fa-calendar"></i> Ngày đăng</th>
                                <th><i class="fa fa-edit"></i> Chỉnh sửa</th>
                                <th><i class="fa fa-eraser"></i> Xoá</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PostName</td>
                                    <td class="hidden-phone">@item.PostBy</td>
                                    <td><span class="label label-info label-mini">@item.Service</span></td>
                                    <td>@item.CreatedDate</td>
                                    <td>
                                        <form action="/post/edit/@item.ID">
                                            <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                        </form>                                     
                                    </td>
                                    <td>
                                        <form action="/post/delete/@item.ID">
                                            <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                        </form>
                                    </td>
                                </tr>
                            } 
                        </tbody>
                    </table>
                </div><!-- /content-panel -->
            <br />
                <strong style="margin: 12px;"> Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</strong>
                @Html.PagedListPager(Model, page => Url.Action("AccountPost", new { page }))
            </div><!-- /col-md-12 -->
        </div><!-- /row -->
</div>
    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->
