@model IQueryable<MNPOSTWEBSITEMODEL.WS_Recruitment>
@{
    ViewBag.Title = "EditRecruitment";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Chỉnh sửa tin tuyển dụng</h3>
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> Chỉnh sửa</h4>
                    <form class="form-horizontal style-form" method="post" action="/post/editrecruitment">
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Loại dịch vụ</label>
                            <div class="col-sm-10">
                                <input class="form-control round-form" name="Recruitment" value="@Model.FirstOrDefault().Name" />
                            </div>                        
                            <input class="form-control round-form" name="ID" value="@Model.FirstOrDefault().ID" style="display:none" />
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Nội dung</label>
                            <div class="col-sm-10">
                                <textarea name="Content" id="Content">@Model.FirstOrDefault().ContentRecruitment</textarea>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-round btn-primary">Lưu</button>
                    </form>
                </div>
            </div><!-- col-lg-12-->
        </div><!-- /row -->
    </section>
</section><!-- /MAIN CONTENT -->
<script src="~/Content/ckeditor/ckeditor.js"></script>
<script src="~/Content/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('Content');
</script>

