@model MNPOSTWEBSITE.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Askbootstrap">
    <meta name="author" content="Askbootstrap">
    <title>ĐĂNG NHẬP</title>
    <!-- Favicon Icon -->
    <link rel="icon" type="image/png" href="images/favicon.png">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Material Design Icons -->
    <link href="/Content/materialdesignicons.min.css" media="all" rel="stylesheet" type="text/css" />
    <!-- Select2 CSS -->
    <link href="/Content/select2-bootstrap.css" rel="stylesheet" />
    <link href="/Content/select2.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="/Content/osahan.css" rel="stylesheet">
</head>
<body>
    <!-- Login -->
    <section class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 mx-auto">
                    <div class="card padding-card">
                        <div class="card-body">
                            <h5 class="card-title mb-4">ĐĂNG NHẬP</h5>
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    <label>Tài khoản <span class="text-danger">*</span></label>
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Nhập tài khoản" })
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </div>
                                <div class="form-group">
                                    <label>Mật khẩu <span class="text-danger">*</span></label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            @Html.LabelFor(m => m.RememberMe)
                                        </div>
                                    </div>
                                    @*<label class="custom-control-label" for="customControlAutosizing">Ghi nhớ tài khoản</label>*@
                                </div>
                                <button type="submit" class="btn btn-success btn-block">ĐĂNG NHẬP</button>
                            }
                            <div class="mt-4 text-center login-with-social">
                                @using (Html.BeginForm("LoginFacebook", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                     @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-facebook btn-block"><i class="mdi mdi-facebook"></i> Đăng nhập với Facebook</button>
                                }
                                <button type="submit" class="btn btn-google btn-block"><i class="mdi mdi-google-plus"></i> Đăng nhập với Google</button>
                            </div>
                            <div class="mt-4 text-center">
                                <a href="/account/forget">Quên mật khẩu?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Login -->
    <!-- Bootstrap core JavaScript -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <!-- Contact form JavaScript -->
    <!-- Do not edit these files! In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <script src="/Content/jqBootstrapValidation.js"></script>
    <script src="/Content/contact_me.js"></script>
    <!-- select2 Js -->
    <script src="/Content/select2.min.js"></script>
    <!-- Custom -->
    <script src="/Content/custom.js"></script>
</body>
</html>
