
@model MNPOSTWEBSITE.Models.Mailer
@{
    ViewBag.Title = "SearchMailer";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<style>
    input[type=text] {
        width: 180px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 12px;
        background-color: white;
        background-image: url('../../images/search.png');
        background-position: 10px 10px;
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
        margin: 10px;
    }

        input[type=text]:focus {
            width: 15%;
        }
</style>
<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Danh sách đơn hàng đã tạo</h3>
        <div class="row">

            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <table class="table table-striped table-advance table-hover">
                            <h4><i class="fa fa-angle-right"></i> Đơn hàng</h4>
                            <hr />
                            <form method="get" action="/order/GetMailer">
                                <button class="btn btn-success" style="float:right;margin-right: 10px;margin-top: 19px;">Tra</button>

                                <div class="col-sm-3" style="float:right">
                                    Đến ngày
                                    <div class='input-group date' id='dtptodate'>
                                        <input type='date' class="form-control" name="ToDate" id="tdate" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                                <div class='col-sm-3' style="float:right">
                                    <div class="form-group">
                                        Từ ngày
                                        <div class='input-group date' id='dtpfromdate'>
                                            <input type='date' class="form-control" id="fdate" name="FromDate" />
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>

                                    </div>
                                </div>
                            </form>
                            <form role="search" method="get" action="/order/searchmailer">
                                <input type="text" name="mailerid" placeholder="Nhập mã vận đơn">
                                <button class="btn btn-success">Tìm kiếm</button>
                            </form>
                            <hr />
                            <thead>
                                <tr>
                                    <th><i class="fa fa-bullhorn"></i> Mã đơn hàng</th>
                                    <th><i class="fa fa-question-circle"></i> Tên người gửi</th>
                                    <th><i class="fa fa-bookmark"></i> Tên người nhận</th>
                                    <th><i class="fa fa-edit"></i> Ngày tạo</th>
                                    <th><i class="fa fa-eraser"></i> Xoá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    <tr>
                                        <td><a href="/order/edit/@Model.MailerID">@Model.MailerID</a></td>
                                        <td class="hidden-phone">@Model.SenderName</td>
                                        <td class="hidden-phone">@Model.RecieverName</td>
                                        <td>@Model.CreationDate</td>
                                        <td>
                                            <form action="/order/deletemailer/@Model.MailerID" method="get">
                                                <button class="btn btn-primary btn-xs"><i class="fa fa-eraser"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <br />
                                    <tr>
                                        Không có đơn hàng được tìm thấy
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div><!-- /content-panel -->
                </div><!-- /col-md-12 -->
            </div><!-- /row -->
        </div>
    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->
