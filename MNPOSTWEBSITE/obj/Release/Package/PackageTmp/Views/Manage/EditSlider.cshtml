@model IQueryable<MNPOSTWEBSITEMODEL.WS_Slider>
@{
    ViewBag.Title = "EditSlider";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Chỉnh sửa Slider trang chủ</h3>

        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> Chỉnh sửa </h4>
                    <form class="form-horizontal style-form" method="post" action="/manage/editslider" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Tiêu đề thứ nhất</label>
                            <div class="col-sm-10">
                                <input class="form-control round-form" name="caption01" value="@Model.FirstOrDefault().Caption01" />
                            </div>
                        </div>
                        @if (Model.FirstOrDefault().Image01 != null)
                        {
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Hình ảnh Slider thứ nhất (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1270x1000 HOẶC LỚN HƠN)</label>
                                <div class="col-sm-10">
                                    <input type="file" name="image01" accept="image/*" />
                                    <div class="row">
                                        <div class="col-sm-3 bg-slider" style="background: url('../../images/slider/@Model.FirstOrDefault().Image01') center center no-repeat / cover;">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Hình ảnh Slider thứ nhất (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1270x1000 HOẶC LỚN HƠN)</label>
                                <div class="col-sm-10">
                                    <input type="file" name="image01" accept="image/*" />
                                </div>
                            </div>
                        }
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Tiêu đề thứ hai</label>
                            <div class="col-sm-10">
                                <input class="form-control round-form" name="caption02" value="@Model.FirstOrDefault().Caption02" />
                            </div>
                        </div>
                        @if (Model.FirstOrDefault().Image02 != null)
                        {
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Hình ảnh Slider thứ hai (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1270x1000 HOẶC LỚN HƠN)</label>
                                <div class="col-sm-10">
                                    <input type="file" name="image02" accept="image/*" />
                                    <div class="row">
                                        <div class="col-sm-3 bg-slider" style="background: url('../../images/slider/@Model.FirstOrDefault().Image02') center center no-repeat / cover;">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Hình ảnh Slider thứ hai (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1270x1000 HOẶC LỚN HƠN)</label>
                                <div class="col-sm-10">
                                    <input type="file" name="image02" accept="image/*" />
                                </div>
                            </div>
                        }
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Tiêu đề thứ ba</label>
                            <div class="col-sm-10">
                                <input class="form-control round-form" name="caption03" value="@Model.FirstOrDefault().Caption03" />
                            </div>
                        </div>
                        @if (Model.FirstOrDefault().Image03 != null)
                        {
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Hình ảnh Slider thứ ba (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1270x1000 HOẶC LỚN HƠN)</label>
                                <div class="col-sm-10">
                                    <input type="file" name="image03" accept="image/*" />
                                    <div class="row">
                                        <div class="col-sm-3 bg-slider" style="background: url('../../images/slider/@Model.FirstOrDefault().Image03') center center no-repeat / cover;">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Hình ảnh Slider thứ ba (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1270x1000 HOẶC LỚN HƠN)</label>
                                <div class="col-sm-10">
                                    <input type="file" name="image03" accept="image/*" />
                                </div>
                            </div>
                        }
                        <button type="submit" class="btn btn-round btn-primary">Lưu</button>
                    </form>
                </div>
            </div><!-- col-lg-12-->
        </div><!-- /row -->
    </section>
</section><!-- /MAIN CONTENT -->
