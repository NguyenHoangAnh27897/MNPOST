@{
    ViewBag.Title = "Quản lý thu tiền";
}
<div ng-app="myApp" ng-controller="myCtrl">


    <div class="row">


        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>QUẢN LÝ COD {{postHandle}}</h2>
                    <div class="nav navbar-right">
                        <button type="button" class="btn btn-primary" ng-click="addnew()">Tạo bảng kê</button>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="" role="tabpanel" data-example-id="togglable-tabs">
                        <ul class="nav nav-tabs bar_tabs" role="tablist">
                            <li role="presentation" class="active">
                                <a href="#tab_report" role="tab" data-toggle="tab" aria-expanded="false">Danh mục</a>
                            </li>
                            <li role="presentation">
                                <a href="#tab_phieuthu" role="tab" data-toggle="tab" aria-expanded="false">Phiếu thu</a>
                            </li>
                            <li role="presentation">
                                <a href="#tab_chitiet" role="tab" data-toggle="tab" aria-expanded="false">Chi tiết</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active in" id="tab_report" aria-labelledby="home-tab">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label>Lọc theo nhân viên</label>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <select class="form-control" ui-select2 ng-model="monitorEmployeeChoose">
                                                        <option ng-repeat="x in employees" value="{{x.code}}">{{x.name + ' - ' + x.code}}</option>
                                                    </select>
                                                </div>
                                                <div class="col-sm-3">
                                                    <button type="button" class="btn btn-primary" ng-click="getReportEmployeeDelivery()">Xem</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <!-- table data-->
                                        <div class="table-responsive">
                                            <table class="table table-striped jambo_table bulk_action">
                                                <thead>
                                                    <tr class="headings">
                                                        <th>STT</th>
                                                        <th>Mã NV</th>
                                                        <th>Tên NV</th>
                                                        <th>Tiền thu chưa nộp</th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <tr ng-repeat="item in deliveryReports">
                                                        <td>
                                                            {{$index + 1}}
                                                        </td>
                                                        <td>{{item.EmployeeID}}</td>
                                                        <td>{{item.EmployeeName}}</td>
                                                        <td>{{item.AllDebit}}</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="tab_phieuthu" aria-labelledby="profile-tab">

                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="tab_chitiet" aria-labelledby="profile-tab">

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- choose buu cuc-->
    <div id="choosePostOfficeModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Chọn bưu cục xử lý</label>
                        <select class="form-control" ng-model="postHandle">
                            <option ng-repeat="item in postOffices" value="{{item}}">{{item}}</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" ng-click="choosePostHandle()">Chọn</button>
                </div>
            </div>

        </div>
    </div>
    <!-- end chon buu cuc-->
</div>

<!-- end content-->
@section scripts {

    <script>

        // tao controller
        var postOfficeDatas = angular.fromJson(@Html.Raw(Json.Encode(ViewBag.PostOffices)));




    </script>

    <script type="text/javascript" src="~/Scripts/debit/employeedebit.js"></script>

}

