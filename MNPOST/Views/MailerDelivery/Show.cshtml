@{
    ViewBag.Title = "Quản lý sổ phát";
}

<div ng-app="myApp" class="row" ng-controller="myCtrl">


    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>QUẢN LÝ SỔ PHÁT {{postHandle}}</h2>
                <div class="nav navbar-right">
                    <button type="button" class="btn btn-primary" ng-click="createDelivery()" ng-hide="showEdit">Tạo bảng kê</button>
                    <button type="button" class="btn btn-warning" ng-hide="showEdit">Tạo từ chia tuyến</button>
                    <button type="button" class="btn btn-primary" ng-click="createDelivery()" ng-show="showEdit">Cập nhật bảng kê</button>
                    <button type="button" class="btn btn-warning" ng-show="showEdit">Đổ danh từ chia tuyến</button>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="" role="tabpanel" data-example-id="togglable-tabs">
                    <ul class="nav nav-tabs bar_tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#tab_sophat" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=false">Sổ phát</a>
                        </li>
                        <li role="presentation">
                            <a href="#tab_chitiet" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=true">Chi tiết</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active in" id="tab_sophat" aria-labelledby="home-tab">
                            <!-- begin tab-->
                            <div class="row">
                                <form name="formSearch" ng-submit="GetData()">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label>Tìm kiếm</label>
                                            <div class="row">
                                                <div class="col-sm-7">
                                                    <input type="text" my-tool-tip="Tìm kiếm" class="form-control" ng-model="searchInfo.search" my-enter="GetData()">
                                                </div>
                                                <div class="col-sm-5">
                                                    <select class="form-control" ng-model="searchInfo.optionSeach" required>
                                                        <option ng-repeat="item in optionSeaches" value="{{item.code}}">{{item.name}}</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label>Thời gian</label>
                                            <div class="row">
                                                <div class="col-sm-5">
                                                    <input type="text" id="fromDate" my-tool-tip="Từ ngày" required class="form-control" data-inputmask="'mask': '99/99/9999'" ng-model="searchInfo.fromDate" value="@ViewBag.FromDate">
                                                </div>
                                                <div class="col-sm-5">
                                                    <input type="text" id="toDate" my-tool-tip="Đến ngày" required class="form-control" data-inputmask="'mask': '99/99/9999'" ng-model="searchInfo.toDate" value="@ViewBag.ToDate">
                                                </div>
                                                <div class="col-sm-2">
                                                    <button class="btn btn-primary" type="submit">Xem thông tin</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                                <!-- thong tin-->
                                <div class="col-md-12">
                                    <!-- table data-->
                                    <div class="table-responsive">
                                        <table class="table table-striped jambo_table bulk_action">
                                            <thead>
                                                <tr class="headings">
                                                    <th>STT</th>
                                                    <th>Mã bảng kê</th>
                                                    <th>Ngày lập</th>
                                                    <th>Nhân viên</th>
                                                    <th>Số xe</th>
                                                    <th>Số lượng</th>
                                                    <th>Trọng lượng</th>
                                                    <th>Tình trạng</th>
                                                    <th>#</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <tr ng-repeat="item in allDeliveries">
                                                    <td>{{$index + 1}}</td>
                                                    <td>{{item.DocumentCode}}</td>
                                                    <td>{{item.DocumentDate}}</td>
                                                    <td>{{item.EmployeeName + ' - ' + item.EmployeeID}}</td>
                                                    <td>{{item.NumberPlate}}</td>
                                                    <td>{{item.Quantity}}</td>
                                                    <td>{{item.Weight}}</td>
                                                    <td>{{item.StatusID}}</td>
                                                    <td><a href="#" ng-click="showDocumentDetail($index)">Chi tiết</a></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!--phan trang-->
                                    <ul items-per-page="itemPerPage" uib-pagination total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()" max-size="maxSize" boundary-link-numbers="true" rotate="false" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></ul>
                                    <!-- end phan trang-->

                                </div>

                            </div>
                            <!-- end tab-->
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="tab_chitiet" aria-labelledby="profile-tab">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Mã bảng kê</label>
                                        <input type="text" class="form-control" disabled value="{{currentDocument.DocumentCode}}" />
                                    </div>
                                    <div class="form-group">
                                        <label>Nhân viên</label>
                                        <input type="text" class="form-control" disabled value="{{currentDocument.EmployeeName + ' - ' + currentDocument.EmployeeID}}" />
                                    </div>
                                    <div class="form-group">
                                        <label>Ghi chú</label>
                                        <textarea class="form-control" ng-model="currentDocument.Notes" rows="2"></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Ngày phát</label>
                                        <input type="text" class="form-control" disabled value="{{currentDocument.DocumentDate}}" />
                                    </div>
                                    <div class="form-group">
                                        <label>Chuyến xe</label>
                                        <input type="text" class="form-control" disabled value="{{currentDocument.NumberPlate}}" />
                                    </div>
                                </div>


                                <div class="col-sm-12">
                                    <hr />
                                   <form ng-submit="addMailer(addMailer.$valid)" name="addMailer">
                                       <div class="row">
                                           <div class="col-sm-4">
                                               <input type="text" class="form-control" ng-model="mailerId" required/>
                                           </div>
                                           <div class="col-sm-2">
                                               <button class="btn btn-primary" type="submit">Thêm</button>
                                           </div>
                                       </div>
                                   </form>
                                    <div class="table-responsive">
                                        <table class="table table-striped jambo_table bulk_action">
                                            <thead>
                                                <tr class="headings">
                                                    <th>STT</th>
                                                    <th>Vận đơn</th>
                                                    <th>Số lượng</th>
                                                    <th>Dịch vụ</th>
                                                    <th>Nơi đến</th>
                                                    <th>Thụ hộ</th>
                                                    <th>Ghi chú</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="item in mailers">
                                                    <td>{{$index + 1}}</td>
                                                    <td>{{item.MailerID}}</td>
                                                    <td>{{item.Weight}}</td>
                                                    <td>{{item.MailerTypeID}}</td>
                                                    <td>{{item.ReceiverAddress}}</td>
                                                    <td>{{item.COD}}</td>
                                                    <td>{{item.Notes}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- choose buu cuc-->
    <div id="choosePostOfficeModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Chọn bưu cục xử lý</label>
                        <select class="form-control" ng-model="postHandle">
                            <option ng-repeat="item in postOffices" value="{{item}}">{{item}}</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" ng-click="choosePostHandle()">Chọn</button>
                </div>
            </div>

        </div>
    </div>
    <!-- end chon buu cuc-->
    <!-- tao bang ke-->
    <div id="createDelivery" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <form name="createDeliveryForm" ng-submit="finishCreateDelivery(createDeliveryForm.$valid)">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Nhân viên phát</label>
                                    <select class="form-control selectpicker" data-live-search="true" required id="chooseEmployeeSelect">
                                        <option ng-repeat="x in employees" value="{{x.code}}">{{x.name + ' - ' + x.code}}</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Xe vận chuyển</label>
                                    <select class="form-control selectpicker" data-live-search="true" required id="licenseplateChoose">
                                        <option ng-repeat="x in licensePlates" value="{{x.code}}">{{x.code}}</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Ghi chú</label>
                                    <textarea rows="3" required class="form-control" id="deliveryNotes"></textarea>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Thời gian phát</label>
                                    <input type="text" id="deliveryDate" required class="form-control" data-inputmask="'mask': '99/99/9999'" value="@ViewBag.FromDate">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Hoàn thành</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- end tao bang ke-->

</div>



<!-- end content-->
@section scripts {
    <script src="~/Content/vendors/jquery.inputmask/dist/min/jquery.inputmask.bundle.min.js"></script>

    <script>
        $(":input").inputmask();
        // tao controller
        var postOfficeDatas = angular.fromJson(@Html.Raw(Json.Encode(ViewBag.PostOffices)));
        var fromDate = '@Html.Raw(ViewBag.FromDate)';
        var toDate = '@Html.Raw(ViewBag.ToDate)';

        showModelFix('choosePostOfficeModal');

    </script>
    <script src="~/Scripts/order/mailerdelivery.js"></script>
}

