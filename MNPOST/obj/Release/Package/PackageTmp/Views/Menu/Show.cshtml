@model IEnumerable<MNPOSTCOMMON.UMS_Menu>
@{
    ViewBag.Title = "Show";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Danh sách Menu</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="javascript:showModel('menumodal')">Thêm Menu</a>
                            </li>
                            <li>
                                <a href="/menu/group">Thêm nhóm Menu</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">
                <p>
                    Danh sách menu chức năng của toàn bộ bộ trang quản lý
                </p>


                <form class="form-horizontal form-label-left" novalidate>
                    <div class="row">

                        <div class="col-sm-3">
                            <div class="form-group">
                                <input class="form-control" name="search" placeholder="Tìm kiếm theo tên menu" type="text">
                            </div>

                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <select class="form-control" name="group">
                                    @if(ViewBag.GroupId == "all") {
                                        <option value="all" selected>Tất cả</option>
                                    } else{
                                        <option value="all">Tất cả</option>
                                    }
                                    @foreach (var item in ViewBag.GroupMenu)
                                    {
                                        if (ViewBag.GroupId == item.Id)
                                        {
                                            <option value="@item.Id" selected>@item.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </form>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã</th>
                            <th>Tên menu</th>
                            <th>Đường dẫn</th>
                            <th>Vị trí</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var temp = "";
                        }
                        @foreach (var item in Model)
                        {

                            if (item.GroupMenuId != temp)
                            {
                                temp = item.GroupMenuId;

                                <tr>
                                    <td><strong>@item.UMS_GroupMenu.Name</strong></td>
                                </tr>
                            }
                            <tr>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.Link</td>
                                <td>@item.Position</td>
                                <td>Sửa</td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>

        </div>

    </div>
</div>


<!-- Modal -->
<div id="menumodal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm menu</h4>
            </div>
            <form method="post" action="/menu/addmenu" id="menuform">
                <div class="modal-body">

                    <div class="form-group">
                        <label>Mã menu</label>
                        <input type="text" class="form-control" name="code" required/>
                    </div>

                    <div class="form-group">
                        <label>Tên menu</label>
                        <input type="text" class="form-control" name="name" required />
                    </div>

                    <div class="form-group">
                        <label>Nhóm</label>
                        <select class="form-control" name="group" required>

                            @foreach (var item in ViewBag.GroupMenu)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Đường dẫn</label>
                        <input type="text" class="form-control" name="link" required />
                    </div>
                    <div class="form-group">
                        <label>Vị trí</label>
                        <input type="number" class="form-control" name="position" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="submitForm('menuform')">Thêm</button>
                </div>
            </form>

        </div>

    </div>
</div>




@section Scripts {

    <!-- validator -->
    <script src="~/Content/vendors/validator/validator.js"></script>
    <script>
        
        @if (ViewBag.MSG != "")
        {
            @:alert(@ViewBag.MSG);
        }
    </script>
}
