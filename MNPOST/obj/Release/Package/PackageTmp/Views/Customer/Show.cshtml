@{
    ViewBag.Title = "Show";
}

<div class="row" ng-app="myApp" ng-controller="myCtrl">


    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Danh sách khách hàng</h2>
                <div class="nav navbar-right">
                    <a class="btn btn-primary" href="/customergroup/show" target="_blank" ng-hide="showEdit">Tạo nhóm</a>
                    <a class="btn btn-warning" ng-click="addNew()">Thêm khách hàng</a>
                </div>
                <div class="clearfix"></div>
            </div>
            <!-- end x_title-->
            <div class="x_content">
                <div class="row">
                    <!-- search-->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="text" class="form-control" ng-model="searchText" my-enter="GetData(1,searchText)" />
                        </div>
                    </div>
                    <!-- search-->
                </div>

                <!-- table data-->
                <div class="table-responsive">
                    <table class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th>STT</th>
                                <th>Mã khách hàng</th>
                                <th>Mã nhóm</th>
                                <th>Tên khách hàng</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Kích hoạt</th>
                                <th>#</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr ng-repeat="item in allCustomer">
                                <td>{{$index + 1}}</td>
                                <td>{{item.CustomerCode}}</td>
                                <td>{{item.CustomerGroupID}}</td>
                                <td>{{item.CustomerName}}</td>
                                <td>{{item.Address}}</td>
                                <td>{{item.Companyphone}}</td>
                                <td>{{item.Email}}</td>
                                <td><input type="checkbox" ng-model="item.IsActive" ng-checked="item.IsActive" /></td>
                                <td><a href="#" ng-click="edit($index)">Chi tiết</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- end table data-->
                <!--phan trang-->
                <ul items-per-page="itemPerPage" uib-pagination total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()" max-size="maxSize" boundary-link-numbers="true" rotate="false" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></ul>
                <!-- end phan trang-->

            </div>
            <!-- end x_content-->
        </div>
        <!-- end x_pannel-->
    </div>


    <!-- tao model them moi-->
    <div id="insertmodal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">{{modaltitle}}</h4>
                </div>


                <!-- begin form-->
                <form class="css-form" name="createForm" ng-submit="finishForm(createForm.$valid)">
                    <!-- body-->
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-6">

                                <div class="form-group">
                                    <label>Mã khách hàng</label>
                                    <input type="text" maxlength="10" class="form-control" ng-model="CustomerInfo.CustomerCode" disabled />
                                </div>

                                <div class="form-group">
                                    <label>Tên khách hàng</label>
                                    <input type="text" class="form-control" ng-model="CustomerInfo.CustomerName" required />
                                </div>

                                <div class="form-group">
                                    <label>Loại khách hàng </label>
                                    <select class="form-control" ng-model="CustomerInfo.CustomerType" required convert-to-number>
                                        <option ng-repeat="x in cusTypes" value="{{x.CustomerType}}">{{x.name | uppercase}}</option>
                                    </select>
                                </div>



                                <div class="form-group">
                                    <label>Người liên hệ</label>
                                    <input type="text" ng-model="CustomerInfo.PersonalInfo" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Di động</label>
                                    <input type="tel" ng-model="CustomerInfo.Mobile" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Ngân hàng</label>
                                    <input type="text" ng-model="CustomerInfo.BankName" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Tài khoản</label>
                                    <input type="text" ng-model="CustomerInfo.BankAccount" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Mã số thuế</label>
                                    <input type="text" ng-model="CustomerInfo.TaxCode" class="form-control" />
                                </div>


                                <div class="form-group">
                                    <label>Số fax</label>
                                    <input type="text" class="form-control" ng-model="CustomerInfo.FaxNo" required />
                                </div>


                            </div>

                            <div class="col-sm-6">

                                <div class="form-group">
                                    <label>Nhóm khách hàng </label>
                                    <select class="form-control" ng-model="CustomerInfo.CustomerGroupID" required>
                                        <option ng-repeat="x in allCustomerGroup" value="{{x.CustomerGroupID}}">{{x.CustomerGroupName | uppercase}}</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                    <input type="text" class="form-control" ng-model="CustomerInfo.Address" required />
                                </div>
                                <div class="form-group">
                                    <label>Quốc gia</label>
                                    <select class="form-control" ng-model="CustomerInfo.CountryID" required>
                                        <option ng-repeat="x in allCountry" value="{{x.CountryID}}">{{x.CountryName | uppercase}}</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label>Tỉnh thành</label>
                                    <select class="form-control" ng-model="CustomerInfo.ProvinceID" ng-change="provinceChange('district', 'send')" required>
                                        <option ng-repeat="item in provinceSend" value="{{item.code}}">{{item.name}}</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Quận huyện</label>
                                    <select class="form-control" ng-model="CustomerInfo.DistrictID" ng-change="provinceChange('ward', 'send')" required>
                                        <option ng-repeat="item in districtSend" value="{{item.code}}">{{item.name}}</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Phường xã</label>
                                    <select class="form-control" ng-model="CustomerInfo.WardID" required>
                                        <option ng-repeat="item in wardSend" value="{{item.code}}">{{item.name}}</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Bưu cục</label>
                                    <select class="form-control" ng-model="CustomerInfo.PostOfficeID" required>
                                        <option ng-repeat="x in allPostOffice" value="{{x.PostOfficeID}}">{{x.PostOfficeName | uppercase}}</option>
                                    </select>
                                </div>


                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" ng-model="CustomerInfo.Email" required />
                                </div>

                                <div class="form-group">
                                    <label>SĐT công ty</label>
                                    <input type="tel" class="form-control" ng-model="CustomerInfo.CompanyPhone" required />
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end body-->
                    <!-- begin footer-->
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Hoàn thành</button>
                    </div>
                    <!-- end footer-->
                </form>
                <!-- end form-->

            </div>
            <!-- end modal content-->
        </div>
    </div>
    <!-- end modal them-->



</div>


<!-- end content-->
@section scripts {

    <script>

        // tao controller
        var app = angular.module('myApp', ['ui.bootstrap', 'myKeyPress', 'myDirective']);

        app.controller('myCtrl', function ($scope, $http) {

            $scope.allCountry = angular.fromJson('@Html.Raw(Json.Encode(ViewBag.AllCountry))');
            $scope.allCustomerGroup = angular.fromJson('@Html.Raw(Json.Encode(ViewBag.AllCustomerGroup))');
            $scope.allPostOffice = angular.fromJson('@Html.Raw(Json.Encode(ViewBag.AllPostOffice))');
            $scope.cusTypes = [{ 'CustomerType': 0, 'name': 'Công ty' }, { 'CustomerType': 1, 'name': 'Cá nhân' }];
            // phan trang

            $scope.numPages;
            $scope.itemPerPage;
            $scope.totalItems;
            $scope.currentPage = 1;
            $scope.maxSize = 5;
            $scope.pageChanged = function () {
                $scope.GetData($scope.currentPage);
            };


            // lay du lieu
            $scope.allCustomer = [];
            $scope.GetData = function (page, search) {
                showLoader(true);
                $http({
                    method: "GET",
                    url: "/customer/getcustomer?page=" + page + "&search=" + search
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.allCustomer = response.data.data;
                        $scope.itemPerPage = response.data.pageSize;
                        $scope.totalItems = response.data.toltalSize;
                        $scope.numPages = Math.round($scope.totalItems / $scope.itemPerPage);
                    }

                }, function myError(response) {
                    showLoader(false);
                    showNotify('Connect error');
                });
            }
            // goi lay du liẹu

            $scope.GetData(1, "");
            //
            // khoi tao bien dung cho create va edit
            $scope.CustomerInfo = {};

            $scope.CustomerCodeDisable = false;
            $scope.IsAction = '';

            $scope.addNew = function () {
                $scope.CustomerInfo = {
                    "CustomerCode": "",
                    "CustomerName": "",
                    "CustomerType": 1,
                    "CustomerGroupID": "",
                    "Address": "",
                    "ProvinceID": "",
                    "CountryID": "",
                    "FaxNo": "",
                    "Email": "",
                    "CompanyPhone": "",
                    "Mobile": "",
                    "PersonalInfo": "",
                    "BankAccount": "",
                    "BankName": "",
                    "TaxCode": "",
                    "PostOfficeID": ""
                };
                $scope.modaltitle = "Thêm khách hàng";
                $scope.CustomerCodeDisable = false;
                $scope.IsAction = 'add';
                showModel("insertmodal")

            };

            $scope.edit = function (index) {
                var info = $scope.allCustomer[index];

                $scope.CustomerInfo = angular.copy(info);
                console.log($scope.CustomerInfo);
                $scope.modaltitle = "Chỉnh sửa khách hàng";
                $scope.CustomerCodeDisable = true;
                $scope.IsAction = 'edit';
                 $scope.provinceChange('district', 'send');
                 $scope.provinceChange('ward', 'send');
                showModel("insertmodal")
            };


            // tim index theo ma tinh
            function getSelectedIndex(id) {
                for (var i = 0; i < $scope.allCustomer.length; i++)
                    if ($scope.allCustomer[i].CustomerCode == id)
                        return i;
                return -1;
            };

            // action
            $scope.finishForm = function (isValid) {
                if (isValid) {
                    if ($scope.IsAction === 'add') {
                        $scope.sendCreate();
                    } else if ($scope.IsAction === 'edit') {
                        $scope.sendEdit();
                    }

                } else {
                    showNotify('our form is missing');
                }
            }

            $scope.provinceSend = angular.fromJson(@Html.Raw(Json.Encode(ViewBag.Provinces)));
            $scope.districtSend = [];
            $scope.wardSend = [];

            $scope.provinceChange = function (pType, type) {

                var url = '/mailerinit/GetProvinces?';

                if (pType === "district") {
                    url = url + "parentId=" + $scope.CustomerInfo.ProvinceID + "&type=district";
                }

                if (pType === "ward") {
                    url = url + "parentId=" + $scope.CustomerInfo.DistrictID + "&type=ward";
                }

                $http.get(url).then(function (response) {

                    if (pType === "district") {
                        $scope.districtSend = angular.copy(response.data);
                    }

                    if (pType === "ward") {
                        $scope.wardSend = angular.copy(response.data);
                    }

                });
            };

            // them tinh
            $scope.sendCreate = function () {

                showLoader(true);

                $http({
                    method: "POST",
                    url: "/customer/create",
                    data: $scope.CustomerInfo
                }).then(function success(response) {

                    var result = response.data;

                    if (result.error === 0) {

                        $scope.allCustomer.unshift(result.data);

                        hideModel("insertmodal");

                        showNotify("Đã thêm khách hàng");

                    } else {

                        alert(result.msg);

                    }

                    showLoader(false);

                }
                , function error(response) {
                    showNotify("connect has disconnect");
                    showLoader(false);
                });

            };

            // cap nhat tinh
            $scope.sendEdit = function () {

                showLoader(true);

                $http({
                    method: "POST",
                    url: "/customer/edit",
                    data: $scope.CustomerInfo
                }).then(
                    function success(response) {

                        var result = response.data;

                        if (result.error == 0) {

                            var findIndex = getSelectedIndex(result.data.CustomerCode);

                            if (findIndex !== -1) {
                                $scope.allCustomer[findIndex] = angular.copy(result.data);
                            }

                            showNotify("Đã cập nhật");
                            hideModel("insertmodal");

                        } else {

                            alert(result.msg);

                        }

                        showLoader(false);

                    },
                    function errror(response) {
                        showLoader(false);
                        showNotify("connect has disconnect");
                    }
                );
            }

        });
        //-- end controller

    </script>
}

