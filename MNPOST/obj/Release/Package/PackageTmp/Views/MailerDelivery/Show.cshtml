@{
    ViewBag.Title = "Quản lý sổ phát";
}

<div ng-app="myApp" class="row" ng-controller="myCtrl">


    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>QUẢN LÝ SỔ PHÁT {{postHandle}}</h2>
                <div class="nav navbar-right">
                    <button type="button" class="btn btn-primary" ng-click="createDelivery()" ng-show="showDeliveries">Tạo bảng kê</button>
                    <button type="button" class="btn btn-warning" ng-show="showDeliveries" ng-click="getAutoRoutes()">Tạo từ chia tuyến</button>
                    <button type="button" class="btn btn-warning" ng-show="showEdit" ng-click="fillMailerForEmployee()">Đổ danh sách</button>
                    <button type="button" class="btn btn-success" ng-show="showEdit" ng-click="confirmAllMailers()">Cập nhật phát</button>
                    <button type="button" class="btn btn-success" ng-show="showUpdate" ng-click="updateDeliveryMailer()">Cập nhật</button>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="" role="tabpanel" data-example-id="togglable-tabs">
                    <ul class="nav nav-tabs bar_tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#tab_sophat" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=false; showDeliveries = true;showUpdate = false">Sổ phát</a>
                        </li>
                        <li role="presentation">
                            <a href="#tab_chitiet" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=true ; showDeliveries = false; showUpdate = false">Chi tiết</a>
                        </li>
                        <li role="presentation">
                            <a href="#tab_capnhatphat" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=false ; showDeliveries = false; showUpdate = true">Cập nhật phát</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active in" id="tab_sophat" aria-labelledby="home-tab">
                            <!-- begin tab-->
                            <div class="row">
                                <form name="formSearch" ng-submit="GetData()">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label>Tìm kiếm</label>
                                            <div class="row">
                                                <div class="col-sm-7">
                                                    <input type="text" my-tool-tip="Tìm kiếm" class="form-control" ng-model="searchInfo.search" my-enter="GetData()">
                                                </div>
                                                <div class="col-sm-5">
                                                    <select class="form-control" ng-model="searchInfo.optionSeach" required>
                                                        <option ng-repeat="item in optionSeaches" value="{{item.code}}">{{item.name}}</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label>Thời gian</label>
                                            <div class="row">
                                                <div class="col-sm-5">
                                                    <input type="text" id="fromDate" my-tool-tip="Từ ngày" required class="form-control" data-inputmask="'mask': '99/99/9999'" ng-model="searchInfo.fromDate" value="@ViewBag.FromDate">
                                                </div>
                                                <div class="col-sm-5">
                                                    <input type="text" id="toDate" my-tool-tip="Đến ngày" required class="form-control" data-inputmask="'mask': '99/99/9999'" ng-model="searchInfo.toDate" value="@ViewBag.ToDate">
                                                </div>
                                                <div class="col-sm-2">
                                                    <button class="btn btn-primary" type="submit">Xem thông tin</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                                <!-- thong tin-->
                                <div class="col-md-12">
                                    <!-- table data-->
                                    <div class="table-responsive">
                                        <table class="table table-striped jambo_table bulk_action">
                                            <thead>
                                                <tr class="headings">
                                                    <th>STT</th>
                                                    <th>Mã bảng kê</th>
                                                    <th>Ngày lập</th>
                                                    <th>Giờ lập</th>
                                                    <th>Nhân viên</th>
                                                    <th>Số xe</th>
                                                    <th>Số lượng</th>
                                                    <th>Trọng lượng</th>
                                                    <th>Tình trạng</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <tr ng-repeat="item in allDeliveries" ng-class="{'active': item.StatusID == 0, 'warning' : item.StatusID == 1,'danger' : item.StatusID == 2, 'success' : item.StatusID == 3}">
                                                    <td>
                                                        {{$index + 1}}&nbsp;&nbsp;
                                                        <a href="#" ng-click="showDocumentDetail($index)"><i my-tool-tip="Chỉnh sửa" class="fa fa-pencil-square"></i></a>
                                                    </td>
                                                    <td> <a href="#" ng-click="showDocumentDetail($index)">{{item.DocumentCode}}</a></td>
                                                    <td>{{item.DocumentDate}}</td>
                                                    <td>{{item.DocumentTime}}</td>
                                                    <td>{{item.EmployeeName + ' - ' + item.EmployeeID}}</td>
                                                    <td>{{item.NumberPlate}}</td>
                                                    <td>{{item.Quantity}}</td>
                                                    <td>{{item.Weight}}</td>
                                                    <td>{{deliveryStatus[item.StatusID].name}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!--phan trang-->
                                    <ul items-per-page="itemPerPage" uib-pagination total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()" max-size="maxSize" boundary-link-numbers="true" rotate="false" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></ul>
                                    <!-- end phan trang-->

                                </div>

                            </div>
                            <!-- end tab-->
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="tab_chitiet" aria-labelledby="profile-tab">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Mã bảng kê</label>
                                        <input type="text" class="form-control" disabled value="{{currentDocument.DocumentCode}}" />
                                    </div>
                                    <div class="form-group">
                                        <label>Nhân viên</label>
                                        <input type="text" class="form-control" disabled value="{{currentDocument.EmployeeName + ' - ' + currentDocument.EmployeeID}}" />
                                    </div>
                                    <div class="form-group">
                                        <label>Ghi chú</label>
                                        <textarea class="form-control" ng-model="currentDocument.Notes" rows="2"></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Ngày phát</label>
                                        <input type="text" class="form-control" disabled value="{{currentDocument.DocumentDate}}" />
                                    </div>
                                    <div class="form-group">
                                        <label>Chuyến xe</label>
                                        <input type="text" class="form-control" disabled value="{{currentDocument.NumberPlate}}" />
                                    </div>
                                    <div class="form-group">
                                        <label>Tình trạng</label>
                                        <input type="text" class="form-control" disabled value="{{deliveryStatus[currentDocument.StatusID].name}}" />
                                    </div>
                                </div>

                                <div class="col-sm-12">
                                    <hr />
                                    <form ng-submit="addMailer(addmailerdelivery.$valid)" name="addmailerdelivery">
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control" ng-model="mailerId" required />
                                            </div>
                                            <div class="col-sm-2">
                                                <button class="btn btn-primary" type="submit">Thêm</button>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="table-responsive">
                                        <table class="table table-striped jambo_table bulk_action">
                                            <thead>
                                                <tr class="headings">
                                                    <th>STT</th>
                                                    <th>Vận đơn</th>
                                                    <th>Trạng thái</th>
                                                    <th>Khối lượng</th>
                                                    <th>Dịch vụ</th>
                                                    <th>Nơi đến</th>
                                                    <th>Thụ hộ</th>
                                                    <th>Ghi chú</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="item in mailers">
                                                    <td>{{$index + 1}}</td>
                                                    <td>{{item.MailerID}}</td>
                                                    <td>{{mailerStatus[item.CurrentStatusID].name}}</td>
                                                    <td>{{item.Weight}}</td>
                                                    <td>{{item.MailerTypeID}}</td>
                                                    <td>{{item.RecieverAddress}}</td>
                                                    <td>{{item.COD}}</td>
                                                    <td>{{item.Notes}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane fade" id="tab_capnhatphat" aria-labelledby="profile-tab">
                            <div class="row">
                                <div class="col-sm-12">
                                    <form ng-submit="addMailerUpdate(addmailerupdatedelivery.$valid)" name="addmailerupdatedelivery">
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control" ng-model="mailerIdUpdate" required />
                                            </div>
                                            <div class="col-sm-2">
                                                <button class="btn btn-primary" type="submit">Thêm</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>

                                <div class="col-sm-12">
                                    <div class="table-responsive">
                                        <table class="table table-striped jambo_table bulk_action scrollmenu">
                                            <thead>
                                                <tr class="headings">
                                                    <th>STT</th>
                                                    <th>Tình trạng</th>
                                                    <th>Người nhận</th>
                                                    <th>Lý do</th>
                                                    <th>Vận đơn</th>
                                                    <th>Khối lượng</th>
                                                    <th>Dịch vụ</th>
                                                    <th>Nơi đến</th>
                                                    <th>Thụ hộ</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="item in mailerUpdates">
                                                    <td>{{$index + 1}}</td>
                                                    <td>
                                                        <select ng-model="item.DeliveryStatus" class="tableinput" convert-to-number>
                                                            <option value="4">ĐÃ PHÁT</option>
                                                            <option value="5">CHUYỂN HOÀN</option>
                                                            <option value="6">CHƯA PHÁT ĐƯỢC</option>
                                                        </select>
                                                    </td>
                                                    <td><input type="text" ng-model="item.DeliveryTo" class="tableinput" /></td>
                                                    <td>
                                                        <select ng-model="item.ReturnReasonID" class="tableinput" convert-to-number>
                                                            <option ng-repeat="item in returnReasons" value="{{item.code}}">{{item.name}}</option>
                                                        </select>
                                                    </td>
                                                    <td>{{item.MailerID}}</td>
                                                    <td>{{item.Weight}}</td>
                                                    <td>{{item.MailerTypeID}}</td>
                                                    <td>{{item.RecieverAddress}}</td>
                                                    <td>{{item.COD}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- choose buu cuc-->
    <div id="choosePostOfficeModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Chọn bưu cục xử lý</label>
                        <select class="form-control" ng-model="postHandle">
                            <option ng-repeat="item in postOffices" value="{{item}}">{{item}}</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" ng-click="choosePostHandle()">Chọn</button>
                </div>
            </div>

        </div>
    </div>
    <!-- end chon buu cuc-->
    <!-- tao bang ke-->
    <div id="createDelivery" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <form name="createDeliveryForm" ng-submit="finishCreateDelivery(createDeliveryForm.$valid)">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Nhân viên phát</label>
                                    <select class="form-control selectpicker" data-live-search="true" required id="chooseEmployeeSelect">
                                        <option ng-repeat="x in employees" value="{{x.code}}">{{x.name + ' - ' + x.code}}</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Xe vận chuyển</label>
                                    <select class="form-control selectpicker" data-live-search="true" id="licenseplateChoose">
                                        <option value="">KHÔNG CHỌN</option>
                                        <option ng-repeat="x in licensePlates" value="{{x.code}}">{{x.code}}</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Ghi chú</label>
                                    <textarea rows="3" required class="form-control" id="deliveryNotes"></textarea>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Thời gian phát</label>
                                    <input type="text" id="deliveryDate" required class="form-control" data-inputmask="'mask': '99/99/9999'" value="@ViewBag.FromDate">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Hoàn thành</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- end tao bang ke-->
    <!--Lay tuyen tu dong -->
    <div id="autoRoutes" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Thời gian phát</label>
                                <input type="text" id="deliveryRouteDate" required class="form-control" data-inputmask="'mask': '99/99/9999'" value="@ViewBag.FromDate">
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="table-responsive">

                                <ul class="listroutes">
                                    <li><span>Tổng vận đơn cần phân phát: <strong>{{countMailers}}</strong></span></li>
                                    <li ng-repeat="item in autoRoutes">
                                        <span><strong>{{item.EmployeeName + '-' + item.EmployeeID}}</strong></span><br />
                                        <a href="#" class="label label-primary" ng-click="createAutoOneEmployee($index)" ng-show="item.Mailers.length > 0">Tạo bảng kê phát</a>
                                        <table class="table table-striped scrollmenu">
                                            <thead>
                                                <tr class="headings">
                                                    <th>STT</th>
                                                    <th>Vận đơn</th>
                                                    <th>Người gửi</th>
                                                    <th>Trạng thái</th>
                                                    <th>Dịch vụ</th>
                                                    <th>Nơi đến</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="mailer in item.Mailers">
                                                    <td>{{$index + 1}}</td>
                                                    <td>{{mailer.MailerID}}</td>
                                                    <td>{{mailer.SenderName}}</td>
                                                    <td>{{mailerStatus[mailer.CurrentStatusID].name}}</td>
                                                    <td>{{mailer.MailerTypeID}}</td>
                                                    <td>{{mailer.RecieverAddress}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" ng-click="createAutoAllEmployee()" class="btn btn-default">Tạo toàn bộ</button>
                </div>
            </div>
        </div>
    </div>
    <!-- end lay tuyen tu dong -->
    <!--Lay tuyen nhan vien -->
    <div id="getmailerdelivery" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="" role="tabpanel" data-example-id="togglable-tabs">
                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                            <li role="presentation" class="active">
                                <a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Từ chia tuyến</a>
                            </li>
                            <li role="presentation" class="">
                                <a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Khác</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
                                <table class="table table-striped scrollmenu">
                                    <thead>
                                        <tr class="headings">
                                            <th><input type="checkbox" ng-model="checkAllMailerAuto" ng-init="checkAllMailerAuto=false" ng-checked="checkAllMailerAuto" ng-change="changeCheckAllMailerEmplpoyeeAuto()" /></th>
                                            <th>Vận đơn</th>
                                            <th>Người gửi</th>
                                            <th>Trạng thái</th>
                                            <th>Dịch vụ</th>
                                            <th>Nơi đến</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="mailer in employeeMailerFromRoutes.Mailers">
                                            <td><input type="checkbox" ng-model="mailer.IsCheck" ng-init="mailer.IsCheck=false" ng-checked="mailer.IsCheck" />{{$index + 1}}</td>
                                            <td>{{mailer.MailerID}}</td>
                                            <td>{{mailer.SenderName}}</td>
                                            <td>{{mailerStatus[mailer.CurrentStatusID].name}}</td>
                                            <td>{{mailer.MailerTypeID}}</td>
                                            <td>{{mailer.RecieverAddress}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <button type="button" class="btn btn-warning">Thêm vào danh sách</button>
                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <label>Tỉnh thành</label>
                                        <select class="form-control" ng-model="provincesearch" ng-change="changeProvince()">
                                            <option value="">Tất cả</option>
                                            <option ng-repeat="item in provinces" value="{{item.code}}">{{item.name}}</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-4">
                                        <label>Phường xã</label>
                                        <select class="form-control" ng-model="districtsearch">
                                            <option value="">Tất cả</option>
                                            <option ng-repeat="item in districts" value="{{item.code}}">{{item.name}}</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-4">
                                        <br>
                                        <button class="btn btn-primary" ng-click="findAllMailerForEmployee()">XEM</button>
                                    </div>
                                    <div class="col-sm-12">
                                        <br />
                                        <table class="table table-striped scrollmenu">
                                            <thead>
                                                <tr class="headings">
                                                    <th><input type="checkbox" ng-model="checkAllMailerForEmployee" ng-init="checkAllMailerForEmployee=false" ng-checked="checkAllMailerForEmployee" ng-change="checkAllMailerForEmployeeChange()" /></th>
                                                    <th>Vận đơn</th>
                                                    <th>Người gửi</th>
                                                    <th>Trạng thái</th>
                                                    <th>Dịch vụ</th>
                                                    <th>Nơi đến</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="mailer in mailerEmployeeFinds">
                                                    <td><input type="checkbox" ng-model="mailer.IsCheck" ng-init="mailer.IsCheck=false" ng-checked="mailer.IsCheck" />{{$index + 1}}</td>
                                                    <td>{{mailer.MailerID}}</td>
                                                    <td>{{mailer.SenderName}}</td>
                                                    <td>{{mailerStatus[mailer.CurrentStatusID].name}}</td>
                                                    <td>{{mailer.MailerTypeID}}</td>
                                                    <td>{{mailer.RecieverAddress}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <button type="button" class="btn btn-primary">Thêm vào danh sách</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Lay tuyen nhan vien -->
</div>

@section styles {

    <style type="text/css">
        .scrollmenu {
            overflow: auto;
            white-space: nowrap;
        }

        .tableinput {
            width: 150px;
            height: 25px;
        }

        .listroutes {
            list-style: none;
            padding: 0px;
            margin: 0px;
        }
    </style>


}

<!-- end content-->
@section scripts {
    <script src="~/Content/vendors/jquery.inputmask/dist/min/jquery.inputmask.bundle.min.js"></script>

    <script>
        $(":input").inputmask();
        // tao controller
        var postOfficeDatas = angular.fromJson(@Html.Raw(Json.Encode(ViewBag.PostOffices)));
        var fromDate = '@Html.Raw(ViewBag.FromDate)';
        var toDate = '@Html.Raw(ViewBag.ToDate)';

        var reasonReturnDatas = angular.fromJson(@Html.Raw(Json.Encode(ViewBag.ReturnReasons)));
        var provinceData = angular.fromJson(@Html.Raw(Json.Encode(ViewBag.Provinces)));
    </script>
    <script src="~/Scripts/order/mailerdelivery.js"></script>
}

